<!DOCTYPE html>
<html>
  <head>
    <title>Railroad</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render partial: 'navs/signed_in_nav' %>
    <% else %>
      <%= render partial: 'navs/nav' %>
    <% end %>
    <%= render 'shared/flash' %>

    <%= yield %>
  </body>
</html>
